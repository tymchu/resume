{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with program}}
        <main>
            <section>
                {{#with excursion}}
                <div><h1>(Excursion)</h1></div>
                <div>
                    <p><i>name:</i> {{name}}</p>
                </div>
                 <hr>
                    {{#with location}}
                        <div><strong>(Location)</strong></div> <br>
                        <div><i>city:</i> {{city}}</div>
                        <div><i>country:</i> {{country}}</div>
                    {{/with}}
                    <div><i>date:</i> {{date}}</div>
                    <hr>
                     <div><strong>(Program)</strong></div> <br>
                    <div>
                    {{#each program}}
                    <div><i>name:</i> {{name}}</div>
                    <div><i>type:</i> {{type}}</div>
                    <div><i>duration:</i> {{duration}}</div>
                    <br>
                    <b>details</b>
                    <br>
                    <div>
                        {{#with details}}
                        <div>
                            {{#with museum}}
                            <br>
                            <div><i>name:</i> {{name}}</div>
                            <br>
                            <div><i>address:</i> {{location.address}}</div>
                            <div><i>city:</i> {{location.city}}</div>
                            <div><i>country:</i> {{location.country}}</div>
                            <br>
                            <h4>exhibits:</h4>
                            <div>
                                {{#each exhibits}}

                                <div><i>name:</i> {{name}}</div>
                                <div><i>artist:</i> {{artist}}</div>
                                <div><i>description:</i> ({{description}})</div>
                                {{#if audio_guide}}<p>*audio guide</p>{{/if}}
                                {{/each}}
                            </div>
                            {{/with}}
                        </div>
                        <div>
                            {{#with venue}}
                            <div>{{name}}</div>
                            <div>{{location.address}}</div>
                            <div> {{location.city}}</div>
                            <div> {{location.country}}</div>
                            <br>
                            <b>performers:</b>
                            <div>
                                {{#each ../performers}}
                                <br>
                                <div>{{name}}</div>
                                <div>{{type}}</div>
                                {{/each}}
                            </div>
                            {{/with}}
                        </div>
                        <strong>guide:</strong>
                        <div>
                           {{#each guide}}
                            {{this}}
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                    <hr>
                    <br>
                    {{/each}}
                     </div>
                {{/with}}
            </section>
        </main>
        
    {{/with}}
</div>

